<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2F2F2F"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvAnd03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello AND03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Layouts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/tvAnd03"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/viewcircle"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:layout_below="@+id/tvwelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:text="Name: Saveen Khan"
        android:drawableEnd="@drawable/name1"
        android:textColor="#FF0000" />
    <TextView
        android:id="@+id/tvAge"
        android:layout_below="@+id/tvName"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Age : 20"
        android:textColor="#FF0000" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00FF00"
        android:padding="20dp"
        android:id="@+id/btnNext"
        android:text="Next"/>
    <View
        android:layout_width="143dp"
        android:layout_height="12dp"
        android:layout_above="@+id/btnNext"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:id="@+id/viewThree"
        android:background="#C4C4C4" />
    <View
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_above="@+id/viewThree"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:id="@+id/viewTwo"
        android:background="#C4C4C4" />

    <View
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_above="@+id/viewTwo"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:id="@+id/viewOne"
        android:background="#C4C4C4" />

</RelativeLayout>
